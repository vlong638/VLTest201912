@{
    Layout = "../Shared/_Layout_ListFull.cshtml";
    ViewBag.Title = "列表";
}
<div id="root" class="layui-fluid" style="padding: 15px;width: 100%;"></div>
<input id="viewName" type="hidden" value="@(ViewBag.ViewName)" />
<script type="text/javascript">
    layui.use(['layer', 'form', 'table', 'util', 'laydate'], function () {
        const $ = layui.jquery;
        var viewName = $("#viewName").val();
        sendAjax('post', '../../api/System/GetListConfig_LayUIByDirectoryName', JSON.stringify({ ViewName: viewName, CustomConfigId: 0 }), function (res) {
            if (res.code === 200) {
                $('#root').renderTable(res.data, layui, parent.layui);
            }
        });
    });
</script>

