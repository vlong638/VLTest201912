@{
    ViewBag.Title = "用户列表";
}
@*功能条*@
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="$('#dlg').dialog('open')">分配角色</a>
</div>
@*列表*@
<dic id="list">
    <div style="margin-top:5px">
        <div id="toolbar" style="display:inline;margin-right:20px;">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="EditUserRole()">分配角色</a>
        </div>
        <div style="display:inline;">
            <span>用户名:</span>
            <input id="in_username" style="line-height:26px;border:1px solid #ccc" />
            <a href="#" class="easyui-linkbutton" plain="true" onclick="doSearch()">搜索</a>
        </div>
    </div>
    <div style="margin-top:3px;">
        <table id="dg_user" style="width:900px;height:550px;" url="GetUserPagedList"></table>
    </div>
</dic>
@*弹窗-分配角色*@
<div id="dlg" class="easyui-dialog" title="Basic Dialog" data-options="closed:true,kiconCls:'icon-save'" style="width:550px;height:550px;">
    <table id="dg_userrole" style="width:100%;height:100%;"></table>
</div>
@*脚本*@
<script type="text/javascript">
    function doSearch()
    {
        $("#dg_user").datagrid('load', {
            username: $('#in_username').val()
        });
    }
    $(function () {
        $("#dg_user").datagrid({
            pagination: true,
            rownumbers: true,
            singleSelect: true,
            remoteSort: true,
            fitColumns: false,
            selectOnCheck: false,
            checkOnSelect: false,
            striped: true,
            pageSize: 3,
            pageList: [3, 10, 20, 50],
            columns: [[
              { field: 'UserId', hidden:'true' },
              { field: 'UserName', title: '用户', width: 100, halign: 'center', align: 'left' },
              { field: 'RoleNamesStr', title: '角色', width: 200, halign: 'center', align: 'left' },
            ]]
        });
    });
    function EditUserRole() {
        var row = $('#dg_user').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('center').dialog('setTitle', '分配角色');
            $("#dg_userrole").datagrid({
                url: 'GetUserRoleListByUser',
                UserId: row.UserId,
                columns: [[
                  { field: 'HasRole', checkbox: true },
                  { field: 'RoleId', hidden: 'true' },
                  { field: 'RoleName', title: '角色名称', width: 100, halign: 'center', align: 'left' },
                ]],
                queryParams: { UserId: row.UserId },
            });
        }
    }
</script>