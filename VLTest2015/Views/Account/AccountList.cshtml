
@{
    ViewBag.Title = "GetUsers";
}
@*功能条*@
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="$('#dlg').dialog('open')">分配角色</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" onclick="$('#dlg').dialog('close')">分配权限</a>
</div>
@*列表*@
<dic id="list">
    <span>用户名:</span>
    <input id="in_userName" style="line-height:26px;border:1px solid #ccc"/>
    <a href="#" class="easyui-linkbutton" plain="true" onclick="doSearch()">搜索</a>
    <table id="dg" style="width:900px;height:550px;" url="GetUsersData"></table>
</dic>
@*弹窗-分配角色*@
<div id="dlg" class="easyui-dialog" title="Basic Dialog" data-options="closed:true,kiconCls:'icon-save'" style="width:550px;height:550px;">
    <table id="tt" class="easyui-datagrid" 
           url="GetUsersData?limit=10&offset=0&userName="
           idField="itemid" pagination="true"
           iconCls="icon-save">
        <thead>
            <tr>
                <th field="IsOn" checkbox="true"></th>
                <th field="Name" width="50">名称</th>
            </tr>
        </thead>
    </table>
</div>
@*脚本*@
<script type="text/javascript">
    function doSearch()
    {
        $("#dg").datagrid('load', {
            username: $('#in_userName').val()
        });
    }
    $(function () {
        $("#dg").datagrid({
            pagination: true,
            rownumbers: true,
            singleSelect: false,
            pageSize: 3,
            remoteSort: true,
            fitColumns: false,
            selectOnCheck: false,
            checkOnSelect: false,
            striped: true,
            pageList: [3,10,20,50],
            columns: [[
               //{ field: 'cd', checkbox: true },
              { field: 'UserName', title: '用户', width: 100, halign: 'center', align: 'left' },
              { field: 'RoleNamesStr', title: '角色', width: 200, halign: 'center', align: 'left' },
            ]]
        });
 });
</script>